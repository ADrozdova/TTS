{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "voc_size": 51,
      "enc_layers": 6,
      "in_size": 384,
      "n_heads": 2,
      "hidden": 1536,
      "kernels": [3, 3],
      "padding": [1, 1],
      "dp_in_size": 384,
      "dp_hidden": 256,
      "dp_kernel": 3,
      "dec_layers": 6,
      "fc_in": 384,
      "fc_mel": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "part": "train",
            "root": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets"
          }
        },
        {
          "type": "LJSpeechDataset",
          "args": {
            "part": "val",
            "root": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4,
      "betas": [0.9, 0.999]
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 300,
      "epochs": 200,
      "anneal_strategy": "linear",
      "max_lr": 5e-4,
      "pct_start": 0.2

    }
  },
  "trainer": {
    "epochs": 200,
    "len_epoch": 300,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "grad_norm_clip": 10
  }
}
