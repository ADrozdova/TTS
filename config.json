{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "voc_size": 51,
      "enc_layers": 6,
      "in_size": 384,
      "n_heads": 2,
      "hidden": 1536,
      "kernels": [3, 3],
      "padding": [1, 1],
      "dp_in_size": 384,
      "dp_hidden": 256,
      "dp_kernel": 3,
      "dec_layers": 6,
      "fc_in": 384,
      "fc_mel": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 1,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "part": "train",
            "root": "."
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.99
    }
  },
  "trainer": {
    "epochs": 200,
    "len_epoch": 3,
    "save_dir": "saved/",
    "save_period": 100,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "grad_norm_clip": 10
  }
}
