{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "voc_size":  51,
      "encoder_in_size": 256,
      "encoder_blocks": 4,
      "n_heads": 2,
      "fft_emb": 1024,
      "attn_dropout",
      "conv_in",
      "conv_hidden",
      "conv_out",
      "kernels":  [3, 3],
      "padding": [1, 1],
      "dropout": 0.1,
      "decoder_blocks",
      "dp_in_size": 384,
      "dp_hidden",
      "dp_kernel_size": 3,
      "dp_dropout",
      "dp_out_size",
      "fc_in",
      "fc_mel"
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    },
    "test": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 2895,
      "epochs": 120,
      "anneal_strategy": "linear",
      "max_lr": 5e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 120,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10
  }
}
