{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "arch": {
    "type": "FastSpeech",
    "args": {
      "voc_size": 51,
      "encoder_in_size": 384,
      "encoder_blocks": 6,
      "n_heads": 2,
      "fft_emb": 384,
      "attn_dropout": 0.1,
      "conv_in": 384,
      "conv_hidden": 1536,
      "conv_out": 384,
      "kernels":  [3, 3],
      "padding": [1, 1],
      "dropout": 0.1,
      "decoder_blocks": 6,
      "dp_in_size": 384,
      "dp_hidden": 384,
      "dp_kernel_size": 3,
      "dp_dropout": 0.1,
      "dp_out_size": 384,
      "fc_in": 384,
      "fc_mel": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "part": "train",
            "root": "."
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJSpeechDataset",
          "args": {
            "part": "val",
            "root": "."
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 32,
      "epochs": 10,
      "anneal_strategy": "linear",
      "max_lr": 5e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 10,
    "len_epoch": 1,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "grad_norm_clip": 10
  }
}
